{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "run dev"
        },
        {
            "type": "npm",
            "script": "run storybook",
            "label": "Open storybook"
        },
        {
            "type": "npm",
            "script": "run predeploy",
            "label": "Pre deploy"
        },
        {
            "type": "npm",
            "dependsOn": ["Pre deploy"],
            "script": "run deploy",
            "label": "Deploy",
            "group": {
              "kind": "build",
              "isDefault": true
            },
        },
    ]
}  